<Window x:Class="GameSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameSnake"
        mc:Ignorable="d"
        Title="GameSnake" Height="512" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="gameField" HorizontalAlignment="Center" Height="496" VerticalAlignment="Top" Width="1024" OpacityMask="Black" Background="#FF2A8339" Grid.Column="1" Grid.RowSpan="2" Loaded="gameLoaded"/>
        <Border HorizontalAlignment="Right" Height="498" Margin="0,-2,0,0" VerticalAlignment="Top" Width="20" Background="#FF723B20"/>
        <Border HorizontalAlignment="Left" Height="498" Margin="0,-2,0,0" VerticalAlignment="Top" Width="20" Background="#FF723B20"/>
        <Border HorizontalAlignment="Center" Height="20" VerticalAlignment="Top"  Width="1024" Background="#FF723B20"/>
        <Border HorizontalAlignment="Center" Height="20" VerticalAlignment="Bottom"  Width="1024" Background="#FF723B20"/>
    </Grid>
</Window>
